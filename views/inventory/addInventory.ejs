<h1><%- title %></h1>
<%- messages() %> <%# Week4 Task2.4 %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form class="input-box" action="/inv/add-inventory" method="post">
    <label>Make<input type="text" value="<%- locals.inv_make %>" placeholder="Min of 3 characters" name="inv_make" minlength="2" maxlength="50"><span class="fine-print">Required.</span></label>
    <label>Model<input type="text" value="<%- locals.inv_model %>" placeholder="Min of 3 characters" name="inv_model" minlength="2" maxlength="50"><span class="fine-print">Required.</span></label>
    <label>Year<input type="number" value="<%- locals.inv_year %>" placeholder="4-digit year" name="inv_year" min="1900" max="2030"><span class="fine-print">Required. 1900-2030.</span></label>
    <label>Description
        <textarea placeholder="Fancy and red." name="inv_description" minlength="2" maxlength="100" rows="5"><%- locals.inv_description %></textarea><span class="fine-print">Required. 100 characters max.</span>
    </label>
    <label>Image<input type="text" value="/images/vehicles/no-image.png" placeholder="red_mustang.jpg" name="inv_image"><span class="fine-print">Required.</span></label>
    <label>Thumbnail<input type="text" value="/images/vehicles/no-image-tn.png" placeholder="litle_red_mustang.jpg" name="inv_thumbnail"><span class="fine-print">Required.</span></label>
    <label>Price<input type="number" value="<%- locals.inv_price %>" placeholder="decimal or integer" name="inv_price"><span class="fine-print">Required. Numeric only, no comma.</span></label>
    <label>Miles<input type="number" value="<%- locals.inv_miles %>" placeholder="digits only" name="inv_miles"><span class="fine-print">Required. Numeric only, no comma.</span></label>
    <label>Color<input type="text" value="<%- locals.inv_color %>" placeholder="Red" name="inv_color"><span class="fine-print">Required.</span></label>
    <label>Classification
        <%- classifications %><span class="fine-print">Required.</span>
    </label>
    <input type="submit" value="ADD">
  </form>